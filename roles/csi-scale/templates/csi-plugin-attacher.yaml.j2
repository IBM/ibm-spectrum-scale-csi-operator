kind: StatefulSet
apiVersion: apps/v1beta1
metadata:
  name: "{{ name }}-attacher"
  namespace: "{{ meta.namespace }}"
spec:
  serviceName: "{{ name }}-attacher"
  replicas: 1
  template:
    metadata:
      labels:
        app: "{{ name }}-attacher"
    spec:
      serviceAccount: csi-attacher
      containers:
        - name: "{{ name }}-attacher"
          image: "{{ csi_attacher }}"
          args:
            - "--v=5"
            - "--csi-address=$(ADDRESS)"
            - "--connection-timeout=2m" # Added
            - "--resync=10m" # Added
          env:
            - name: ADDRESS
              value: /var/lib/kubelet/plugins/csi-spectrum-scale/csi.sock
          imagePullPolicy: "IfNotPresent"
          volumeMounts:
            - name: socket-dir
              mountPath: /var/lib/kubelet/plugins/csi-spectrum-scale
      volumes:
        - name: socket-dir
          hostPath:
            path: /var/lib/kubelet/plugins/csi-spectrum-scale
            type: DirectoryOrCreate
