kind: StatefulSet
apiVersion: apps/v1
metadata:
  name: "{{ name }}-attacher"
  namespace: "{{ namespace }}"
spec:
  serviceName: "{{ name }}-attacher"
  replicas: 1
  selector:
    matchLabels:
      app: "{{ name }}-attacher"
  template:
    metadata:
      labels:
        app: "{{ name }}-attacher"
        product: ibm-spectrum-scale-csi
    spec:
      serviceAccount: external-attacher-runner
      containers:
        - name: "{{ name }}-attacher"
{% if 'apps.openshift.io' in api_groups %}
          securityContext:
            privileged: true
{% endif %}
          image: "{{ attacher }}"
          args:
            - "--v=5"
            - "--csi-address=$(ADDRESS)"
            - "--connection-timeout=2m" # Added
            - "--resync=10m" # Added
          env:
            - name: ADDRESS
              value: /var/lib/kubelet/plugins/csi-spectrum-scale/csi.sock
          imagePullPolicy: "IfNotPresent"
          volumeMounts:
            - name: socket-dir
              mountPath: /var/lib/kubelet/plugins/csi-spectrum-scale
      volumes:
        - name: socket-dir
          hostPath:
            path: /var/lib/kubelet/plugins/csi-spectrum-scale
            type: DirectoryOrCreate
